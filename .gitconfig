[color]
	diff = auto
	status = auto
	branch = auto
[push]
	default = simple
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lg-ascii = log --graph --pretty=format:'%h -%d %s (%cr) <%an>' --abbrev-commit
	standup = log --since yesterday --author="marcec" --pretty=oneline --branches=* --decorate
[merge]
	tool = vimdiff2
[mergetool]
	keepbackup = false
